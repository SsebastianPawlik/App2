<Page
    x:Class="CzyJestesSzczesliwyXaml.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CzyJestesSzczesliwyXaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button x:ConnectionId='2'                        FontSize="36">Czy jesteś szczęśliwy?</Button>
            <TextBlock x:ConnectionId='3' x:Name="response" FontSize="36"/>
            <TextBlock x:ConnectionId='4' x:Name="ticker" FontSize="36"/>
        </StackPanel>
    </Grid>
</Page>

